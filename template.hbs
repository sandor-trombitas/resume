<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{basics.name}} - Resume</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
        h1, h2 {
            color: #2c3e50;
        }
        .section {
            margin-bottom: 20px;
        }
        .job {
            margin-bottom: 15px;
        }
        .job-title {
            font-weight: bold;
        }
        .job-date {
            font-style: italic;
        }
        ul {
            padding-left: 20px;
        }
    </style>
</head>
<body>
    <header>
        <h1>{{basics.name}}</h1>
        <p>{{basics.label}}</p>
        <p>{{basics.email}} | {{basics.phone}}</p>
        <p>{{basics.location.city}}, {{basics.location.countryCode}}</p>
        <p><a href="{{basics.url}}">{{basics.url}}</a></p>
    </header>

    <section class="section">
        <h2>Summary</h2>
        <p>{{basics.summary}}</p>
    </section>

    <section class="section">
        <h2>Work Experience</h2>
        {{#each work}}
        <div class="job">
            <p class="job-title">{{position}} at {{name}}</p>
            <p class="job-date">{{startDate}} - {{#if endDate}}{{endDate}}{{else}}Present{{/if}}</p>
            <p>{{location}}</p>
            <p>{{summary}}</p>
            {{#if highlights}}
            <ul>
                {{#each highlights}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            {{/if}}
        </div>
        {{/each}}
    </section>

    <section class="section">
        <h2>Education</h2>
        {{#each education}}
        <div>
            <p><strong>{{institution}}</strong></p>
            <p>{{area}}, {{studyType}}</p>
            <p>{{startDate}} - {{endDate}}</p>
        </div>
        {{/each}}
    </section>

    <section class="section">
        <h2>Skills</h2>
        {{#each skills}}
        <div>
            <p><strong>{{name}}</strong> ({{level}})</p>
            <p>{{keywords}}</p>
        </div>
        {{/each}}
    </section>

    <section class="section">
        <h2>Certificates</h2>
        {{#each certificates}}
        <div>
            <p><strong>{{name}}</strong></p>
            <p>Issued by {{issuer}} on {{date}}</p>
        </div>
        {{/each}}
    </section>

    <section class="section">
        <h2>Languages</h2>
        {{#each languages}}
        <p>{{language}}: {{fluency}}</p>
        {{/each}}
    </section>

    <section class="section">
        <h2>Interests</h2>
        {{#each interests}}
        <p><strong>{{name}}:</strong> {{keywords}}</p>
        {{/each}}
    </section>
</body>
</html>